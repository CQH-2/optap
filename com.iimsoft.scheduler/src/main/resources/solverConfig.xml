<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <solutionClass>com.iimsoft.scheduler.domain.ProductionSchedule</solutionClass>
    <entityClass>com.iimsoft.scheduler.domain.ProductionAssignment</entityClass>

    <!-- 使用增量计分器替代 ConstraintProvider -->
    <scoreDirectorFactory>
        <incrementalScoreCalculatorClass>
            com.iimsoft.scheduler.solver.GlobalInventoryIncrementalScoreCalculator
        </incrementalScoreCalculatorClass>
    </scoreDirectorFactory>

    <phase>
        <constructionHeuristic/>
        <genetic>
            <populationSize>200</populationSize>
            <selection>
                <tournamentSize>5</tournamentSize>
            </selection>
        </genetic>
    </phase>

    <termination>
        <secondsSpentLimit>5</secondsSpentLimit>
    </termination>

    <environmentMode>REPRODUCIBLE</environmentMode>
</solver>